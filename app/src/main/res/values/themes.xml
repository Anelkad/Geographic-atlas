<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeographicAtlas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="page_title">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="property">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="value">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="country">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="capital">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="learn_more_label">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textColor">#6200EE</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="region_title">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:textColor">#ABB3BB</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedCornersImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>